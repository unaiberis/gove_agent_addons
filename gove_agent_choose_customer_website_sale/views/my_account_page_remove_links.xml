<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_purchase" name="Show Purchase Orders" customize_show="True" inherit_id="portal.portal_my_home" priority="99">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">

        </xpath>
      </template>
    

    <template id="portal_my_home_sale" name="Show Quotations / Sales Orders" customize_show="True"
        inherit_id="portal.portal_my_home" priority="99">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="request.env.user.sudo().partner_id.agent">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="title">Quotations</t>
                    <t t-set="url" t-value="'/my/quotes'" />
                    <t t-set="placeholder_count" t-value="'quotation_count'" />
                </t>
                <t t-call="portal.portal_docs_entry">
                    <t t-set="title">Sales Orders</t>
                    <t t-set="url" t-value="'/my/orders'" />
                    <t t-set="placeholder_count" t-value="'order_count'" />
                </t>
            </t>
        </xpath>
    </template>
</odoo>