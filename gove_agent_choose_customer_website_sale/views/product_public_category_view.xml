<odoo>
    <record id="product_public_category_tree_view_inherited" model="ir.ui.view">
        <field name="name">product.public.category.tree.inherited</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id" ref="product_public_category_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="pricelist_ids"/>
            </xpath>
        </field>
    </record>

    <record id="product_public_category_form_view_inherited" model="ir.ui.view">
        <field name="name">product.public.category.form.inherited</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id" ref="product_public_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div/group" position="after">
                <group>
                    <field name="pricelist_ids"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>