<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template
        id="products_item_add_tariff_price" inherit_id="website_sale.products_item">
        <xpath expr="//div[hasclass('product_price')]" position="after">
            <div class="product_price" itemprop="offers" itemscope="itemscope"
                itemtype="http://schema.org/Offer">
                <div style="width: 100%; text-align: left;">
                    <div class="css_quantity input-group">
                        <t t-set="order_line"
                            t-value="website_sale_order.order_line.filtered(lambda line: line.product_template_id.id == product.id) if website_sale_order and website_sale_order.order_line else []" />
                        <!-- <t t-esc="order_line" /> -->
                            <div class="input-group-prepend">
                            <a class="btn btn-secondary js_add_cart_json" aria-label="Quitar uno"
                                title="Quitar uno" href="#">
                                <i class="fa fa-minus"></i>
                            </a>
                        </div>
                        <input type="text" class="form-control quantity" name="add_qty"
                            t-att-value="order_line and order_line[0].product_uom_qty or 0"
                            title="" />
                        <div class="input-group-append">
                            <a class="btn btn-secondary float_left js_add_cart_json"
                                aria-label="Agregue uno" title="Agregue uno" href="#">
                                <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>