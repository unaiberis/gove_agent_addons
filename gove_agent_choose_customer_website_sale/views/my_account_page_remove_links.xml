<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template ref="purchase.portal_my_home_purchase">
        <!-- Remove the t-call blocks by replacing them with an empty block -->
            <p>custom_portal_my_home_purchase</p>
    </template>

    <template id="custom_portal_my_home_sale" inherit_id="sale.portal_my_home_menu_sale">
        <xpath expr="//li" position="replace">
            <p>custom_portal_my_home_sale</p>
</xpath>
    </template>

    <template id="sale.portal_my_home_sale" inherit_id="sale.portal_my_home_sale" priority="9">
        <!-- Remove the t-call blocks by replacing them with an empty block -->
        <xpath expr="//t[@t-call='portal.portal_docs_entry']" position="replace">
            <t t-if="request.env.user.sudo().partner_id.agent">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="title">Quotations</t>
                    <t t-set="url" t-value="'/my/quotes'" />
                    <t t-set="placeholder_count" t-value="'quotation_count'" />
                </t>
                <t t-call="portal.portal_docs_entry">
                    <t t-set="title">Sales Orders</t>
                    <t t-set="url" t-value="'/my/orders'" />
                    <t t-set="placeholder_count" t-value="'order_count'" />
                </t>
            </t>
            <t t-else="">
                <span></span>
            </t>
        </xpath>
    </template>
</odoo>