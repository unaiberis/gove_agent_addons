<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View offer.category.pricelist View Tree -->
    <record id="view_offer_category_pricelist_tree" model="ir.ui.view">
        <field name="name">view.offer.category.pricelist.tree</field>
        <field name="model">offer.category.pricelist</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- View offer.category.pricelist form -->
    <record id="view_offer_category_pricelist_form" model="ir.ui.view">
        <field name="name">view.offer.category.pricelist.form</field>
        <field name="model">offer.category.pricelist</field>
        <field name="arch" type="xml">
            <form string="Offer Category Pricelist">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View offer.category.pricelist search -->
    <record id="view_offer_category_pricelist_search" model="ir.ui.view">
        <field name="name">view.offer.category.pricelist.search</field>
        <field name="model">offer.category.pricelist</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action offer.category.pricelist -->
    <record id="action_offer_category_pricelist" model="ir.actions.act_window">
        <field name="name">Offer Category Pricelist</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">offer.category.pricelist</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Offer Category Pricelist.
            </p>
        </field>
    </record>

</odoo>
